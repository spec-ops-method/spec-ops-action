{
  "name": "spec-ops-action",
  "version": "1.0.0",
  "description": "A GitHub Action that automatically creates issues when specification files are modified",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --license licenses.txt --no-source-map-register && rm -f dist/*.d.ts dist/*.d.ts.map",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spec-ops-method/spec-ops-action.git"
  },
  "keywords": [
    "github-action",
    "specification",
    "spec-ops",
    "automation",
    "issues"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/spec-ops-method/spec-ops-action/issues"
  },
  "homepage": "https://github.com/spec-ops-method/spec-ops-action#readme",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@actions/glob": "^0.4.0",
    "handlebars": "^4.7.8",
    "micromatch": "^4.0.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/micromatch": "^4.0.6",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
